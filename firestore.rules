rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read for games & settings (marketing site can read without auth).
    match /games/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /settings/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
